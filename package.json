{
  "name": "react-media-match",
  "version": "1.11.3",
  "description": "React made responsible",
  "author": "Marina Korzunova<thearnica@gmail.com>",
  "license": "MIT",
  "engines": {
    "node": ">=10"
  },
  "types": "dist/es5/index.d.ts",
  "files": [
    "dist",
    "targets"
  ],
  "keywords": [
    "react",
    "media",
    "responsible",
    "adaptive",
    "media-query"
  ],
  "repository": "https://github.com/thearnica/react-media-match",
  "dependencies": {
    "prop-types": "^15.6.1",
    "tslib": "^1.9.3"
  },
  "size-limit": [
    {
      "path": "dist/es2015/index.js",
      "limit": "2.5 KB"
    }
  ],
  "sideEffects": false,
  "peerDependencies": {
    "@types/react": "^16.8.0",
    "react": "^16.8.0"
  },
  "peerDependenciesMeta": {
    "@types/react": {
      "optional": true
    }
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "^2.1.6",
    "@theuiteam/lib-builder": "^0.0.11",
    "@types/node": "^14.0.5",
    "@types/prop-types": "^15.7.1",
    "@types/react-test-renderer": "^16.8.1",
    "codecov": "^3.0.2",
    "enzyme": "^3.3.0",
    "react-test-renderer": "^16.8.6"
  },
  "main": "dist/es5/index.js",
  "jsnext:main": "dist/es2015/index.js",
  "module": "dist/es2015/index.js",
  "scripts": {
    "dev": "lib-builder dev",
    "test": "jest",
    "test:ci": "jest --runInBand --coverage",
    "build": "lib-builder build && yarn size:report",
    "release": "yarn build && yarn test",
    "size": "npx size-limit",
    "size:report": "npx size-limit --json > .size.json",
    "lint": "lib-builder lint",
    "format": "lib-builder format",
    "update": "lib-builder update",
    "docz:dev": "docz dev",
    "docz:build": "docz build",
    "prepublish": "yarn build && yarn changelog",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "changelog:rewrite": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "tslint --fix",
      "git add"
    ],
    "*.{js,css,json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "printWidth": 120,
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true
  }
}
